-- database: ../../dataStorage.db

CREATE TABLE IF NOT EXISTS auth_logs (
  id INTEGER PRIMARY KEY AUTOINCREMENT,
  timestamp TEXT NOT NULL,
  event TEXT NOT NULL,             -- e.g. "LOGIN_SUCCESS", "LOGIN_FAILED", "JWT_VERIFY_FAILED"
  userId INTEGER,                  -- nullable
  email TEXT,
  ip TEXT,
  userAgent TEXT,
  details TEXT                     -- JSON string or message
);

