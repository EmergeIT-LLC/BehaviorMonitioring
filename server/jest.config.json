{
  "testEnvironment": "node",
  "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
  "testMatch": [
    "<rootDir>/tests/**/*.test.js",
    "<rootDir>/tests/**/*.spec.js"
  ],
  "collectCoverageFrom": [
    "**/*.js",
    "!node_modules/**",
    "!tests/**",
    "!coverage/**"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 50,
      "functions": 50,
      "lines": 50,
      "statements": 50
    }
  },
  "testTimeout": 10000,
  "forceExit": true,
  "detectOpenHandles": true
}
